<table align="center">
    <h2 style="text-align:center">Check Text Pattern Regex</h2>

    <h3 style="color:blue">@ViewBag.KetQua</h3>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <tr style="height:40px">
            <td> Chuỗi của bạn : </td>
            <td>
                <input type="text" name="Chuoi">
                <br>
                <span style="color:red; font-style:italic">@ViewData["Loi1"] </span>
            </td>
        </tr>

        <br />
        <br />

        <tr style="height:40px">
            <td> Pattern cần kiểm tra : </td>
            <td>
                <input type="text" name="Pattern">
                <br>
                <span style="color:red; font-style:italic">@ViewData["Loi2"] </span>
            </td>
        </tr>

        <br />
        <br />
      
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="Submit" value="Kết Quả" />
            </td>
        </tr>
    }
</table>

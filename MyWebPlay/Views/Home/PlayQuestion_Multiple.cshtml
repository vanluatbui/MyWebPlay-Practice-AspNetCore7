<script>

    function xemfile(event)
    {
        var ulx = document.getElementById("ulx");
        var files = event.target.files;
        ulx.innerHTML = "";

        for (var i=0; i< files.length; i++)
        {
            var item = document.createElement("li");
            item.innerHTML = files[i].name;
            ulx.appendChild(item);
        }

   }
</script>


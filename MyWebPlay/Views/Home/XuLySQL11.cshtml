<script>
      function xoaValue(ele)
    {
            document.getElementById(ele).value = "";
            document.getElementById(ele).focus();
    }
</script>
<table align="center">
    <h2 style="text-align:center">Xử Lý SQL 11</h2>

    <h3 style="color:purple" onclick="muaxuan()">@ViewBag.KetQua</h3>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <tr style="height:40px">
            <td> </td>
            <td>
                <a href="#xuly" onclick="xoaValue('table')"> <b>Nhập table : </b></a>
                <br>
                <input type="text" name="txtTable" id="table" size="50" value="@ViewBag.Table" />
                <br><br>
               <a href="#xuly" onclick="xoaValue('constants')"> <b>Nhập nội dung constants : </b></a>
                <br>
                <textarea name="txtConstants" id="constants" cols="100" rows="12">@ViewBag.Constants</textarea>
                <br><br>
                <a href="#xuly" onclick="xoaValue('script')"><b>Nhập nội dung script sql</b></a>
                <br>
                <textarea name="txtScript" id="script" cols="100" rows="12">@ViewBag.Script</textarea>
